@model IEnumerable<Exam>

@{
    ViewData["Title"] = "Exams List";
}

<h1 class="mb-4">Exams Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Exam</a>
    

</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var exam in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@exam.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@exam.Description</h6>

                        <div class="mb-3">
                            <span class="badge bg-info me-2">
                                Duration: @exam.Duration mins
                            </span>
                            <span class="badge bg-secondary">
                                Questions: @exam.TotalQuestions
                            </span>
                        </div>

                        <div class="mb-3 small text-muted">
                            <div><i class="bi bi-check-circle-fill text-success me-1"></i> Pass Mark: @exam.PassMark%</div>
                            <div><i class="bi bi-calendar-event me-1"></i> From: @exam.AvailableFrom?.ToShortDateString()</div>
                            <div><i class="bi bi-calendar-x me-1"></i> To: @exam.AvailableTo?.ToShortDateString()</div>
                            <div><i class="bi bi-journal-bookmark me-1"></i> Course: @exam.Course?.Title</div>
                        </div>

                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Available From: @exam.AvailableFrom?.ToString("dd MMM yyyy")
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No exams found. Start by creating a new one!
            </div>
        </div>
    }
</div>
