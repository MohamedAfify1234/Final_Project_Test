@model Educational_Platform.DAL.Entities.Lessons.Lesson

@{
    ViewData["Title"] = "Delete Lesson";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Lesson</h4>
                </div>

                <div class="card-body">
                    <h5 class="text-center text-danger fw-bold mb-3">
                        Are you sure you want to delete this lesson?
                    </h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Title)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Content)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.VideoUrl)</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.VideoUrl))
                            {
                                <a href="@Model.VideoUrl" target="_blank">@Model.VideoUrl</a>
                            }
                            else
                            {
                                <span class="text-muted">No video link</span>
                            }
                        </dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.AttachmentUrl)</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.AttachmentUrl))
                            {
                                <a href="@Model.AttachmentUrl" target="_blank">@Model.AttachmentUrl</a>
                            }
                            else
                            {
                                <span class="text-muted">No attachment</span>
                            }
                        </dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Duration)</dt>
                        <dd class="col-sm-9">@Model.Duration Minutes</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Order)</dt>
                        <dd class="col-sm-9">@Model.Order</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.IsFree)</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsFree ? "bg-success" : "bg-danger")">
                                @(Model.IsFree ? "Yes (Preview)" : "No")
                            </span>
                        </dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Type)</dt>
                        <dd class="col-sm-9">@Model.Type</dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" method="post" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i> Delete
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
