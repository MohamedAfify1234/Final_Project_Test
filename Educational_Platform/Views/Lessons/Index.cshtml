@model IEnumerable<Educational_Platform.DAL.Entities.Lessons.Lesson>
@{
    ViewData["Title"] = "Lessons List";
    var courseTitle = ViewBag.CourseTitle ?? "Selected Course";
    var courseId = ViewBag.courseId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lessons for: @courseTitle</h1>
        <a asp-action="Create" asp-route-courseId="@courseId" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Create New Lesson
        </a>
    </div>

    <hr />

    @if (Model.Any())
    {
        <div class="accordion" id="lessonsAccordion">
            @foreach (var item in Model.OrderBy(l => l.Order))
            {
                <div class="card shadow-sm mb-2">
                    <div class="card-header p-0" id="heading_@item.Id">
                        <h2 class="mb-0">
                            <button class="btn btn-block text-start w-100 p-3" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapse_@item.Id" aria-expanded="false" aria-controls="collapse_@item.Id">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <h4 class="mb-0 me-3 text-secondary">#@item.Order</h4>
                                        <h5 class="mb-0">@item.Title</h5>
                                    </div>
                                    <div>
                                        <span class="badge bg-secondary me-2">@item.Duration min</span>
                                        <span class="badge @(item.IsFree ? "bg-info" : "bg-dark") me-2">@(item.IsFree ? "FREE" : "PAID")</span>
                                        <span class="badge bg-primary">@item.Type</span>
                                    </div>
                                </div>
                            </button>
                        </h2>
                    </div>

                    <div id="collapse_@item.Id" class="collapse" aria-labelledby="heading_@item.Id" data-bs-parent="#lessonsAccordion">
                        <div class="card-body">
                            <p class="text-muted">@item.Description</p>

                            <hr />

                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">View Content</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5" role="alert">
            <h4 class="alert-heading">No Lessons Found!</h4>
            <p>This course currently has no lessons. Click the button above to add the first one.</p>
        </div>
    }
</div>

<div class="mt-5 text-center">
    <a asp-action="ShowAll" asp-controller="Course" class="btn btn-outline-secondary btn-lg">Back to Courses List</a>
</div>