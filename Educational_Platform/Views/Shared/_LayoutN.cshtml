        // دالة لإنشاء بطاقات الدورات
        function createCourseCard(course, isPopular = true) {
            const colors = ['#3498db', '#e74c3c', '#2ecc71', '#f39c12', '#9b59b6', '#1abc9c'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];

            return `
                <div class="course-card">
                    <div class="course-img" style="background-color: ${randomColor};">
                        <span class="course-badge">${course.badge}</span>
                    </div>
                    <div class="course-content">
                        <span class="course-category">${course.category}</span>
                        <h3 class="course-title">${course.title}</h3>
                        <p class="course-instructor"><i class="fas fa-user"></i> ${course.instructor}</p>
                        <div class="course-meta">
                            <span><i class="far fa-clock"></i> ${course.duration}</span>
                            <span><i class="far fa-star"></i> ${(Math.random() * 0.5 + 4.5).toFixed(1)}</span>
                        </div>
                    </div>
                </div>
            `;
        }

        // دالة لعرض الدورات
        function renderCourses() {
            const popularCoursesContainer = document.getElementById('popularCourses');
            const newCoursesContainer = document.getElementById('newCourses');

            popularCourses.forEach(course => {
                popularCoursesContainer.innerHTML += createCourseCard(course, true);
            });

            newCourses.forEach(course => {
                newCoursesContainer.innerHTML += createCourseCard(course, false);
            });
        }

        // تفعيل القائمة المتنقلة
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('navLinks').classList.toggle('active');
        });

        // تهيئة الصفحة
        document.addEventListener('DOMContentLoaded', function() {
            renderCourses();
        });
