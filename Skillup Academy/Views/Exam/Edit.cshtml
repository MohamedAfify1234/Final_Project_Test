@model ExamViewModel

@{
    ViewData["Title"] = "Edit Exam";
}

<h2 class="mb-4 text-center">Edit Exam</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="Duration" class="form-label"></label>
            <input asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TotalQuestions" class="form-label"></label>
            <input asp-for="TotalQuestions" class="form-control" />
            <span asp-validation-for="TotalQuestions" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="PassMark" class="form-label"></label>
            <input asp-for="PassMark" class="form-control" />
            <span asp-validation-for="PassMark" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="MaxAttempts" class="form-label"></label>
            <input asp-for="MaxAttempts" class="form-control" />
            <span asp-validation-for="MaxAttempts" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="AvailableFrom" class="form-label"></label>
            <input asp-for="AvailableFrom" type="datetime-local" class="form-control" />
            <span asp-validation-for="AvailableFrom" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="AvailableTo" class="form-label"></label>
            <input asp-for="AvailableTo" type="datetime-local" class="form-control" />
            <span asp-validation-for="AvailableTo" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="CourseId" class="form-label"></label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsPublished" class="form-check-input" />
        <label asp-for="IsPublished" class="form-check-label"></label>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success px-4">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
