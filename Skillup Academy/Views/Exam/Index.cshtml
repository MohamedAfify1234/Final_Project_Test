@model IEnumerable<Exam>

@{
    ViewData["Title"] = "Exams List";
}

<h1 class="mb-4">Exams Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Exam</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    @* Card Image (Placeholder for Exam) *@
                    <img src="/images/default-exam.jpg"
                         class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">

                        @* Title & Status Badges *@
                        <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Description)</h6>

                        <div class="mb-3">
                            <span class="badge @(item.IsPublished ? "bg-success" : "bg-warning text-dark") me-2">
                                @(item.IsPublished ? "Published" : "Draft")
                            </span>
                            <span class="badge bg-info">
                                @item.Duration mins
                            </span>
                        </div>

                        @* Metrics *@
                        <div class="row row-cols-2 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-question-circle me-1"></i> @Html.DisplayFor(modelItem => item.TotalQuestions) Questions
                            </div>
                            <div class="col">
                                <i class="bi bi-check-circle-fill text-success me-1"></i> @Html.DisplayFor(modelItem => item.PassMark)% Pass
                            </div>
                            <div class="col">
                                <i class="bi bi-arrow-repeat me-1"></i> @Html.DisplayFor(modelItem => item.MaxAttempts) Attempts
                            </div>
                            <div class="col">
                                <i class="bi bi-journals me-1"></i> @item.Course?.Title
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            <a asp-action="Index" asp-Controller="ExamAttempts" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Attempts</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Available: @Html.DisplayFor(modelItem => item.AvailableFrom) - @Html.DisplayFor(modelItem => item.AvailableTo)
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No exams found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
    @* Add a reference to Bootstrap Icons if you're using them, or remove the <i> tags if not. *@
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"> *@
}