@model CourseReview

@{
    ViewData["Title"] = "Delete Course Review";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-danger mb-4">Confirm Deletion</h1>

            <div class="alert alert-danger shadow-sm p-4" role="alert">
                <h3>Are you sure you want to delete this course review?</h3>
                <p class="lead mt-3">This action cannot be undone. The review and all its ratings will be permanently removed from the system.</p>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Review Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Course</dt>
                        <dd class="col-sm-9">@Model.Course.Title</dd>

                        <dt class="col-sm-3">User</dt>
                        <dd class="col-sm-9">@Model.User.FullName</dd>

                        <dt class="col-sm-3">Overall Rating</dt>
                        <dd class="col-sm-9">
                            <div class="d-flex align-items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= Model.Rating ? "bi-star-fill text-warning" : "bi-star text-muted") me-1"></i>
                                }
                                <span class="ms-2">(@Model.Rating/5)</span>
                            </div>
                        </dd>

                        <dt class="col-sm-3">Content Rating</dt>
                        <dd class="col-sm-9">@Model.ContentRating/5</dd>

                        <dt class="col-sm-3">Teaching Rating</dt>
                        <dd class="col-sm-9">@Model.TeachingRating/5</dd>

                        <dt class="col-sm-3">Review Date</dt>
                        <dd class="col-sm-9">@Model.ReviewDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-3">Comment</dt>
                        <dd class="col-sm-9">@Model.Comment</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsApproved)</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsApproved ? "bg-success" : "bg-warning text-dark")">
                                @(Model.IsApproved ? "Approved" : "Pending")
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <hr class="mt-4" />

            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 me-3">
                    <i class="bi bi-trash"></i> Delete Permanently
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel & Back to List</a>
            </form>
        </div>
    </div>
</div>