@model IEnumerable<CourseReview>

@{
    ViewData["Title"] = "Course Reviews";
}

<h1 class="mb-4">Course Reviews Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Review</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    <div class="card-body d-flex flex-column">

                        @* Rating Stars *@
                        <div class="text-center mb-3">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= item.Rating ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                            }
                            <span class="ms-2 text-muted small">@item.Rating/5</span>
                        </div>

                        @* Title & Status Badges *@
                        <h6 class="card-subtitle mb-2 text-muted">@item.Course?.Title</h6>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Comment)</p>

                        <div class="mb-3">
                            <span class="badge @(item.IsApproved ? "bg-success" : "bg-warning text-dark") me-2">
                                @(item.IsApproved ? "Approved" : "Pending")
                            </span>
                            <span class="badge bg-info">
                                @item.ReviewDate.ToString("dd MMM yyyy")
                            </span>
                        </div>

                        @* Detailed Ratings *@
                        <div class="row row-cols-2 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-journal-text me-1"></i> Content: @item.ContentRating/5
                            </div>
                            <div class="col">
                                <i class="bi bi-person-check me-1"></i> Teaching: @item.TeachingRating/5
                            </div>
                            <div class="col">
                                <i class="bi bi-person me-1"></i> User: @item.User?.UserName
                            </div>
                            <div class="col">
                                <i class="bi bi-calendar me-1"></i> @item.ReviewDate.ToString("MMM yyyy")
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Review ID: @Html.DisplayFor(modelItem => item.Id)
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No reviews found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
    @* Add a reference to Bootstrap Icons if you're using them, or remove the <i> tags if not. *@
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"> *@
}