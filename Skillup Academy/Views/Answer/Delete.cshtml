@model AnswerViewModel

@{
    ViewData["Title"] = "Delete Answer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-danger mb-4">Confirm Deletion</h1>

            <div class="alert alert-danger shadow-sm p-4" role="alert">
                <h3>Are you sure you want to delete this answer?</h3>
                <p class="lead mt-3">This action cannot be undone. The answer will be permanently removed from the system.</p>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Answer Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Content</dt>
                        <dd class="col-sm-9">@Model.Content</dd>

                        <dt class="col-sm-3">Answered Date</dt>
                        <dd class="col-sm-9">@Model.AnsweredDate.ToString("g")</dd>

                        <dt class="col-sm-3">Is Correct</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsCorrect ? "bg-success" : "bg-secondary")">
                                @(Model.IsCorrect ? "Yes" : "No")
                            </span>
                        </dd>

                        <dt class="col-sm-3">Is Accepted</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsAccepted ? "bg-primary" : "bg-secondary")">
                                @(Model.IsAccepted ? "Yes" : "No")
                            </span>
                        </dd>

                        <dt class="col-sm-3">Question ID</dt>
                        <dd class="col-sm-9">@Model.QuestionId</dd>

                        <dt class="col-sm-3">User ID</dt>
                        <dd class="col-sm-9">@Model.UserId</dd>
                    </dl>
                </div>
            </div>

            <hr class="mt-4" />

            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 me-3">
                    <i class="bi bi-trash"></i> Delete Permanently
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel & Back to List</a>
            </form>
        </div>
    </div>
</div>