@model IEnumerable<AnswerViewModel>

@{
    ViewData["Title"] = "Answers List";
}

<h1 class="mb-4">Answers Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Answer</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    <div class="card-body d-flex flex-column">

                        @* Title & Status Badges *@
                        <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Content)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Answered: @Html.DisplayFor(modelItem => item.AnsweredDate)</h6>

                        <div class="mb-3">
                            <span class="badge @(item.IsCorrect ? "bg-success" : "bg-danger") me-2">
                                @(item.IsCorrect ? "Correct" : "Incorrect")
                            </span>
                            <span class="badge @(item.IsAccepted ? "bg-primary" : "bg-secondary")">
                                @(item.IsAccepted ? "Accepted" : "Pending")
                            </span>
                        </div>

                        @* Metrics *@
                        <div class="row row-cols-1 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-question me-1"></i> Question ID: @Html.DisplayFor(modelItem => item.QuestionId)
                            </div>
                            <div class="col">
                                <i class="bi bi-person me-1"></i> User ID: @Html.DisplayFor(modelItem => item.UserId)
                            </div>
                            <div class="col">
                                <i class="bi bi-calendar me-1"></i> @Html.DisplayFor(modelItem => item.AnsweredDate)
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Answer ID: @Html.DisplayFor(modelItem => item.Id)
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No answers found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
    @* Add a reference to Bootstrap Icons if you're using them, or remove the <i> tags if not. *@
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"> *@
}