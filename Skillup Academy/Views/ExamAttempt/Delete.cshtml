@model ExamAttempt

@{
    ViewData["Title"] = "Delete Exam Attempt";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-danger mb-4">Confirm Deletion</h1>

            <div class="alert alert-danger shadow-sm p-4" role="alert">
                <h3>Are you sure you want to delete this exam attempt?</h3>
                <p class="lead mt-3">This action cannot be undone. The attempt record and all its results will be permanently removed from the system.</p>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Exam Attempt Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Exam</dt>
                        <dd class="col-sm-9">@Model.Exam?.Title</dd>

                        <dt class="col-sm-3">Student</dt>
                        <dd class="col-sm-9">@Model.Student?.UserName</dd>

                        <dt class="col-sm-3">Attempt Number</dt>
                        <dd class="col-sm-9">#@Model.AttemptNumber</dd>

                        <dt class="col-sm-3">Score</dt>
                        <dd class="col-sm-9">
                            <span class="fw-bold @(Model.Score >= 50 ? "text-success" : "text-danger")">
                                @Model.Score%
                            </span>
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsPassed ? "bg-success" : "bg-danger")">
                                @(Model.IsPassed ? "Passed" : "Failed")
                            </span>
                        </dd>

                        <dt class="col-sm-3">Start Time</dt>
                        <dd class="col-sm-9">@Model.StartTime.ToString("dd MMM yyyy HH:mm")</dd>

                        <dt class="col-sm-3">End Time</dt>
                        <dd class="col-sm-9">
                            @if (Model.EndTime.HasValue)
                            {
                                @Model.EndTime.Value.ToString("dd MMM yyyy HH:mm")
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">In Progress</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Questions</dt>
                        <dd class="col-sm-9">@Model.CorrectAnswers/@Model.TotalQuestions correct</dd>

                        <dt class="col-sm-3">Duration</dt>
                        <dd class="col-sm-9">
                            @if (Model.EndTime.HasValue)
                            {
                                var duration = Model.EndTime.Value - Model.StartTime;
                                <span>@duration.ToString(@"hh\:mm")</span>
                            }
                            else
                            {
                                <span class="text-muted">Not completed</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <hr class="mt-4" />

            <form asp-action="SaveDelete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 me-3">
                    <i class="bi bi-trash"></i> Delete Permanently
                </button>
                <a asp-action="ShowAll" class="btn btn-secondary btn-lg">Cancel & Back to List</a>
            </form>
        </div>
    </div>
</div>