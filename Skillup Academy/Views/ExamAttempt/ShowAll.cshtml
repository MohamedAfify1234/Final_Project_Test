@model IEnumerable<ExamAttempt>

@{
    ViewData["Title"] = "Exam Attempts";
}

<h1 class="mb-4">Exam Attempts Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Attempt</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    <div class="card-body d-flex flex-column">

                        @* Title & Status Badges *@
                        <h5 class="card-title text-primary">@item.Exam?.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Attempt #@item.AttemptNumber by @item.Student?.UserName</h6>

                        <div class="mb-3">
                            <span class="badge @(item.IsPassed ? "bg-success" : "bg-danger") me-2">
                                @(item.IsPassed ? "Passed" : "Failed")
                            </span>
                            <span class="badge bg-info">
                                Score: @item.Score%
                            </span>
                        </div>

                        @* Metrics *@
                        <div class="row row-cols-2 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-check-circle-fill text-success me-1"></i> @item.CorrectAnswers Correct
                            </div>
                            <div class="col">
                                <i class="bi bi-question-circle me-1"></i> @item.TotalQuestions Total
                            </div>
                            <div class="col">
                                <i class="bi bi-clock me-1"></i> @item.StartTime.ToString("dd MMM HH:mm")
                            </div>
                            <div class="col">
                                @if (item.EndTime.HasValue)
                                {
                                    <i class="bi bi-clock-history me-1"></i> 
                                    @item.EndTime.Value.ToString("dd MMM HH:mm")
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">In Progress</span>
                                }
                            </div>
                        </div>

                        @* Progress Bar *@
                        <div class="mb-3">
                            <div class="d-flex justify-content-between small text-muted mb-1">
                                <span>Progress</span>
                                <span>@item.Score%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar @(item.Score >= 50 ? "bg-success" : "bg-danger")"
                                     role="progressbar"
                                     style="width: @item.Score%;"
                                     aria-valuenow="@item.Score"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Attempt ID: @item.Id
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No exam attempts found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
