@model ExamAttemptViewModel

@{
    ViewData["Title"] = "Create Exam Attempt";
}

<h1>Create Exam Attempt</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-lg-9">
        <form asp-action="SaveCreate" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Basic Attempt Create</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StartTime" class="form-label"></label>
                                <input asp-for="StartTime" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="EndTime" class="form-label"></label>
                                <input asp-for="EndTime" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Score" class="form-label"></label>
                                <input asp-for="Score" class="form-control" />
                                <span asp-validation-for="Score" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="AttemptNumber" class="form-label"></label>
                                <input asp-for="AttemptNumber" class="form-control" />
                                <span asp-validation-for="AttemptNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Results & Metrics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TotalQuestions" class="form-label"></label>
                                <input asp-for="TotalQuestions" class="form-control" />
                                <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CorrectAnswers" class="form-label"></label>
                                <input asp-for="CorrectAnswers" class="form-control" />
                                <span asp-validation-for="CorrectAnswers" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-group form-check mb-3">
                                <input class="form-check-input" asp-for="IsPassed" />
                                <label class="form-check-label" asp-for="IsPassed">
                                    @Html.DisplayNameFor(model => model.IsPassed)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Relations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ExamId" class="form-label"></label>
                                <select asp-for="ExamId" class="form-control" asp-items="@Model.Exams">
                                    <option value="0">-- Select Exam --</option>
                                </select>
                                <span asp-validation-for="ExamId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StudentId" class="form-label"></label>
                                <select asp-for="StudentId" class="form-control" asp-items="@Model.Students">
                                    <option value="0">-- Select Student --</option>
                                </select>
                                <span asp-validation-for="StudentId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group pt-3 text-center">
                <input type="submit" value="Create Attempt" class="btn btn-primary btn-lg px-5" />
            </div>

        </form>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="ShowAll" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}