@model Skillup_Academy.ViewModels.StudentsViewModels.StudentProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_StudentLayout";
}

<div class="container mt-5">

    <div class="card shadow-lg p-4">
        <div class="row">

            <!-- PROFILE IMAGE + NAME -->
            <div class="col-md-4 text-center border-end">
                <img src="@Url.Content(Model.ProfilePicture)"
                     class="rounded-circle mb-3"
                     style="width:150px;height:150px;object-fit:cover;border:3px solid #007bff;" />



                <h4 class="fw-bold text-primary">@Model.FullName</h4>
                <p class="text-muted">@Model.Email</p>

                <a asp-controller="Student" asp-action="EditProfile" class="btn btn-outline-primary w-75 mt-2">Edit Profile</a>
                <a asp-controller="Student" asp-action="ChangePassword" class="btn btn-outline-secondary w-75 mt-2">Change Password</a>
            </div>

            <!-- PROFILE DETAILS -->
            <div class="col-md-8">

                <h4 class="fw-bold mb-3">Account Information</h4>

                <table class="table table-borderless">
                    <tr>
                        <th class="text-muted" style="width:200px;">Username:</th>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Phone:</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Registered On:</th>
                        <td>@Model.RegistrationDate.ToString("yyyy/MM/dd")</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Last Login:</th>
                        <td>@Model.LastLoginDate?.ToString("yyyy/MM/dd")</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Last Profile Update:</th>
                        <td>@Model.LastProfileUpdate?.ToString("yyyy/MM/dd")</td>
                    </tr>
                </table>

                <hr />

                <h4 class="fw-bold mb-3">Learning Stats</h4>

                <div class="row text-center">
                    <div class="col-md-4">
                        <h5 class="fw-bold text-primary">@Model.CompletedCourses</h5>
                        <p class="text-muted">Completed Courses</p>
                    </div>
                    <div class="col-md-4">
                        <h5 class="fw-bold text-success">@Model.TotalEnrollments</h5>
                        <p class="text-muted">Total Enrollments</p>
                    </div>
                    <div class="col-md-4">
                        <h5 class="fw-bold text-info">@Model.OverallProgress %</h5>
                        <p class="text-muted">Overall Progress</p>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>
