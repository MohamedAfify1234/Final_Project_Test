@model Subscription

@{
    ViewData["Title"] = "Delete Subscription";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-danger mb-4">Confirm Deletion</h1>

            <div class="alert alert-danger shadow-sm p-4" role="alert">
                <h3>Are you sure you want to delete the subscription: **@Model.Name**?</h3>
                <p class="lead mt-3">This action cannot be undone. All related subscription plans and user data will be permanently removed from the system.</p>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Subscription Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Type)</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Html.DisplayFor(model => model.Type)</span>
                        </dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-9">$@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DurationDays)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DurationDays) days</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaxCourses)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MaxCourses) courses</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsActive)</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-sm-3">Subscription ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                       @*  @if (Model.SubscriptionPlans?.Count > 0)
                        {
                            <dt class="col-sm-3">Active Plans</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-info">@Model.SubscriptionPlans.Count active plans</span>
                            </dd>
                        } *@
                    </dl>
                </div>
            </div>

            <hr class="mt-4" />

            <form asp-action="SaveDelete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 me-3">
                    <i class="bi bi-trash"></i> Delete Permanently
                </button>
                <a asp-action="ShowAll" class="btn btn-secondary btn-lg">Cancel & Back to List</a>
            </form>
        </div>
    </div>
</div>