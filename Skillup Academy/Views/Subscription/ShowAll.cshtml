@model IEnumerable<Subscription>

@{
    ViewData["Title"] = "Subscriptions Management";
}

<h1 class="mb-4">Subscriptions Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Subscription</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    @* Card Header with Pricing *@
                    <div class="card-header bg-gradient text-white text-center py-4"
                         style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <h4 class="card-title mb-1">@item.Name</h4>
                        <div class="price-display">
                            <span class="h3 fw-bold">$@item.Price</span>
                            @if (item.DurationDays > 0)
                            {
                                <small class="d-block">for @item.DurationDays days</small>
                            }
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">

                        @* Description *@
                        <p class="card-text small text-muted mb-3">
                            @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 100)
                            {
                                @item.Description.Substring(0, 100)
                                <text>...</text>
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>

                        @* Status Badges *@
                        <div class="mb-3">
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary") me-2">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                            <span class="badge bg-primary">
                                @item.Type
                            </span>
                        </div>

                        @* Features & Limits *@
                        <div class="row row-cols-1 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-journals me-1"></i>
                                Max Courses: @item.MaxCourses
                            </div>
                            <div class="col">
                                <i class="bi bi-calendar me-1"></i>
                                Duration: @item.DurationDays days
                            </div>
                            <div class="col">
                                <i class="bi bi-currency-dollar me-1"></i>
                                Price: $@item.Price
                            </div>
                            <div class="col">
                                <i class="bi bi-tag me-1"></i>
                                Type: @item.Type
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Subscription Plan
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No subscriptions found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
