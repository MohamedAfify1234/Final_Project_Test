@using Skillup_Academy.ViewModels.TeacherDashboard
@model IEnumerable<CourseDashboardViewModel>

@{
    ViewData["Title"] = "My Courses";
    Layout = "/Views/Shared/_TeacherLayout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold">My Courses</h1>
                <p class="lead">Manage your courses, track student progress, and grow your teaching impact.</p>
                <div class="mt-4">
                    <a asp-action="Create" asp-controller="Course" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-plus me-2"></i>Create New Course
                    </a>
                    <a href="#" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-chart-bar me-2"></i>View Analytics
                    </a>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                    <i class="fas fa-book-open fa-3x" style="color: #667eea;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-book fa-lg"></i>
                </div>
                <h4>@Model.Count()</h4>
                <p class="text-muted mb-0">Total Courses</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users fa-lg"></i>
                </div>
                <h4>@Model.Sum(c => c.TotalStudents)</h4>
                <p class="text-muted mb-0">Total Students</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-play-circle fa-lg"></i>
                </div>
                <h4>@Model.Sum(c => c.TotalLessons)</h4>
                <p class="text-muted mb-0">Total Lessons</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-chart-line fa-lg"></i>
                </div>
                <h4>@Model.Count(c => c.IsPublished)</h4>
                <p class="text-muted mb-0">Published</p>
            </div>
        </div>
    </div>

    <!-- Courses Grid -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>My Courses</h3>
                <div>
                    <a asp-action="Create" asp-controller="Course" class="btn btn-primary me-2">
                        <i class="fas fa-plus me-2"></i>New Course
                    </a>
                    <a href="#" class="btn btn-outline-primary">
                        <i class="fas fa-filter me-2"></i>Filter
                    </a>
                    <a asp-action="Showall" asp-controller="course" class="btn btn-outline-primary">
                        <i class="fas fa-filter me-2"></i>View All
                    </a>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="course-card h-100">
                        <div class="course-img position-relative">
                            <i class="fas fa-book-open fa-3x text-white"></i>
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge @(course.IsPublished ? "bg-success" : "bg-warning")">
                                    @(course.IsPublished ? "Published" : "Draft")
                                </span>
                            </div>
                            <div class="position-absolute top-0 start-0 m-2">
                                <span class="badge @(course.IsFree ? "bg-info" : "bg-dark")">
                                    @(course.IsFree ? "Free" : "Paid")
                                </span>
                            </div>
                        </div>
                        <div class="p-3 d-flex flex-column h-100">
                            <h5 class="text-primary">@course.Title</h5>
                            <p class="text-muted flex-grow-1">@(string.IsNullOrEmpty(course.Description) ? "No description available." : course.Description)</p>

                            <div class="mt-auto">
                                <!-- Metrics Row -->
                                <div class="row row-cols-2 g-2 mb-3 small text-muted">
                                    <div class="col">
                                        <i class="fas fa-star text-warning me-1"></i> @course.AverageRating Rating
                                    </div>
                                    <div class="col">
                                        <i class="fas fa-clock me-1"></i> @course.TotalDuration min
                                    </div>
                                    <div class="col">
                                        <i class="fas fa-users me-1"></i> @course.TotalStudents Enrolled
                                    </div>
                                    <div class="col">
                                        <i class="fas fa-list-alt me-1"></i> @course.TotalLessons Lessons
                                    </div>
                                </div>

                                <!-- Actions Row -->
                                <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        @course.CreatedDate.ToString("MMM dd, yyyy")
                                    </small>
                                    <div class="course-actions">
                                        <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-outline-secondary btn-sm me-1">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-book fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Courses Yet</h4>
                    <p class="text-muted">Start by creating your first course to share your knowledge.</p>
                    <a asp-action="Create" asp-controller="Course" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Create Your First Course
                    </a>
                </div>
            </div>
        }
    </div>
    


    <!-- Quick Stats -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="stat-card">
                <h4 class="mb-4">Course Performance</h4>
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-primary">@Model.Count(c => c.IsPublished)</h3>
                            <p class="text-muted mb-0">Published Courses</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-success">@Model.Count(c => !c.IsPublished)</h3>
                            <p class="text-muted mb-0">Draft Courses</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-info">@Model.Sum(c => c.TotalStudents)</h3>
                            <p class="text-muted mb-0">Total Enrollments</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-warning">@Model.Sum(c => c.TotalLessons)</h3>
                            <p class="text-muted mb-0">Total Lessons</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .course-img {
            height: 160px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            position: relative;
        }

        .stat-card {
            border: none;
            border-radius: 15px;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            background: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
        }

        .course-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .course-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            }

        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 0 0 15px 15px;
            color: white;
            padding: 3rem 2rem;
            margin-bottom: 2rem;
        }

        .course-actions .btn {
            margin-left: 3px;
            margin-right: 3px;
            border-radius: 20px;
            transition: all 0.3s ease;
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

            .course-actions .btn:hover {
                transform: scale(1.05);
            }

        /* Responsive adjustments for buttons */
        @@media (max-width: 768px) {
            .course-actions {
                flex-wrap: wrap;
                gap: 5px;
            }

                .course-actions .btn {
                    margin: 2px;
                    font-size: 0.7rem;
                    padding: 0.2rem 0.4rem;
                }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('My Courses page loaded successfully');

            // Add hover effects
            document.querySelectorAll('.stat-card').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Add confirmation for delete buttons
            document.querySelectorAll('a[href*="Delete"]').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this course?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}