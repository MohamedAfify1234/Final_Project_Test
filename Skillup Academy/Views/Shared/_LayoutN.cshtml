<!DOCTYPE html>


<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"] - Educational_Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Educational_Platform.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="~/css/StyleHomePage.css" rel="stylesheet">
    <style>

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.3rem;
            box-shadow: 0 4px 8px rgba(109, 40, 217, 0.3);
        }

        .logo-text {
            font-size: 1.6rem;
            font-weight: 700;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    </style>
</head>
<body><header>
    <nav class="navbar">
            <div class="logo" style="display: flex; align-items: center;">
                <a asp-controller="Home" asp-action="Index" style="display: flex; align-items: center; text-decoration: none;">

                    <div class="logo-icon" style="font-size: 1.8rem; margin-inline-end: 8px;">

                        <i class="fas fa-graduation-cap"></i>

                    </div>
                    <div class="logo-text" style="font-size: 1.6rem; font-weight: bold;">Bedaya</div>
                </a>

            </div>
        <div class="menu-toggle" id="menuToggle">
            <span></span>
            <span></span>
            <span></span>
        </div>

         <ul class="nav-links" id="navLinks"> 
            <li class="me-4"><a asp-action="AllCourseInHeader" asp-controller="Course">Courses</a></li>
            <li class="me-4"><a asp-action="GetAllInstructors" asp-controller="Account">Instructors</a></li>
            <li class="mobile-auth">
 
            <ul class="nav-links" id="navLinks">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="me-4"><a asp-action="ShowAll" asp-controller="Course">Courses</a></li>
                <li class="me-4"><a asp-action="Dashboard" asp-controller="Teacher">Instructors</a></li>
                <li class="me-4"><a asp-action="Index" asp-controller="CourseCategories">Categories</a></li>
                <li class="me-4"><a href="#">About</a></li>

                <li class="mobile-auth">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-profile" asp-action="Profile" asp-controller="Account">
                            <i class="fas fa-user-circle"></i> Profile
                        </a>
                        <a asp-action="Logout" asp-controller="Account" type="submit" class="btn btn-logout" style="background-color:red;color:white;">
                            Logout
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-login" asp-action="Login" asp-controller="Account">Login</a>
                        <a class="btn btn-register" asp-action="StudentRegister" asp-controller="Account">Register</a>
                    }
                </li>
            </ul>

            <div class="auth-buttons">
                 @if (User.Identity.IsAuthenticated)
                {
                        <a class="btn btn-profile" href="#" style="
                display: flex;
                align-items: center;
                padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                margin-inline-end: 10px;
                text-decoration: none;
                /* تصميم زر بحدود لملف شخصي */
                background-color: #f0f8ff;
                color: #007bff;
                border: 1px solid #007bff;
                font-weight: 500;
            ">
                        <i class="fas fa-user-circle"></i> Profile
                    </a>
                        <a asp-action="Logout" asp-controller="Account" type="submit" class="btn btn-logout" style="
                /* تصميم زر الإجراء الهام (Logout) */
                background-color: #dc3545;
                color: white;
                padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                text-decoration: none;
                border: 1px solid #dc3545;
                font-weight: 500;
            ">
                        Logout
                    </a>
                }
                else
                {
                        <a class="btn btn-login" asp-action="Login" asp-controller="Account" style="
                /* تصميم الزر الأساسي (Login) */
                padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                margin-inline-end: 10px;
                text-decoration: none;
                background-color: #007bff;
                color: white;
                border: 1px solid #007bff;
                font-weight: 600;
            ">Login</a>
                        <a class="btn btn-register" asp-action="StudentRegister" asp-controller="Account" style="
                 padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                text-decoration: none;
                background-color: transparent;
                color: #007bff;
                border: 1px solid #007bff;
                font-weight: 600;
            ">Register</a>
                }
            </li>
        </ul>
        
        <form asp-action="SearchResults" asp-controller="Home" method="get" style="flex-grow: 1; max-width: 450px;">
            <div class="search-bar d-flex justify-content-center ">
                <input type="text" name="query"
                       class="form-control shadow-sm"
                       placeholder="Search for a course, topic, or instructor..."
                       style="max-width: 350px; border-top-left-radius: 30px; border-bottom-left-radius: 30px; padding: 8px 15px; border: 1px solid #ced4da; font-size: 0.9rem;">
                <button type="submit" class="btn btn-primary fw-semibold"
                        style="border-top-right-radius: 30px; border-bottom-right-radius: 30px; padding: 8px 20px; font-size: 0.9rem;">
                    <i class="fas fa-search me-1"></i> Search
                </button>
            </div>
        </form>
        
        <div class="auth-buttons">
            @if (User.Identity.IsAuthenticated)
            {
                    <a class="btn btn-profile" href="#" style="
                display: flex;
                align-items: center;
                padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                margin-inline-end: 10px;
                text-decoration: none;
                /* تصميم زر بحدود لملف شخصي */
                background-color: #f0f8ff;
                color: #007bff;
                border: 1px solid #007bff;
                font-weight: 500;
            ">
                        <i class="fas fa-user-circle"></i> Profile
                    </a>
                    <a asp-action="Logout" asp-controller="Account" type="submit" class="btn btn-logout" style="
                /* تصميم زر الإجراء الهام (Logout) */
                background-color: #dc3545;
                color: white;
                padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                text-decoration: none;
                border: 1px solid #dc3545;
                font-weight: 500;
            ">
                     Logout
                </a>
             }
            else
            {
                    <a class="btn btn-login" asp-action="Login" asp-controller="Account" style="
                /* تصميم الزر الأساسي (Login) */
                padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                margin-inline-end: 10px;
                text-decoration: none;
                background-color: #007bff;
                color: white;
                border: 1px solid #007bff;
                font-weight: 600;
            ">Login</a>
                    <a class="btn btn-register" asp-action="StudentRegister" asp-controller="Account" style="
                 padding: 8px 15px;
                border-radius: 6px;
                font-size: 0.95rem;
                text-decoration: none;
                background-color: transparent;
                color: #007bff;
                border: 1px solid #007bff;
                font-weight: 600;
            ">Register</a>
            }
        </div>
    </nav>
</header>
 		<main role="main" class="pb-3 my-1 mx-2">
			<div style="background-color:aliceblue ">
				@RenderBody()
			</div>
        
		</main>
          
    <footer>
        <div class="footer-content">
            <div class="footer-column">
                <h3>Bedaya</h3>
                <p>A leading educational platform aiming to provide high-quality educational content in various fields.</p>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <div class="footer-column">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Courses</a></li>
                    <li><a href="#">Instructors</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Categories</h3>
                <ul class="footer-links">
                    <li><a href="#">Web Development</a></li>
                    <li><a href="#">Programming</a></li>
                    <li><a href="#">Digital Marketing</a></li>
                    <li><a href="#">Design</a></li>
                    <li><a href="#">Business</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Contact Us</h3>
                <ul class="footer-links">
                    <li><i class="fas fa-envelope"></i> info@bedaya.com</li>
                    <li><i class="fas fa-phone"></i> +201000000000</li>
                    <li><i class="fas fa-map-marker-alt"></i> Cairo, Egypt</li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            <p>All Rights Reserved &copy; 2025 - Bedaya Platform - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>


    <script>  
        // Activate mobile menu toggle
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('navLinks').classList.toggle('active');
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            renderCourses();
        });
    </script>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>