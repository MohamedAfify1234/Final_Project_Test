
@model QuestionViewModel

@{
    ViewData["Title"] = "Delete Question";
}

<h2 class="text-center text-danger mb-4">Delete Question</h2>

<div class="alert alert-warning">
    <h5>Are you sure you want to delete this question?</h5>
    <p class="mb-0">
        <strong>Title:</strong> @Model.Title <br />
        <strong>Content:</strong> @Model.Content
    </p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
    </div>
</form>

