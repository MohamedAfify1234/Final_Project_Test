@model QuestionViewModel

@{
    ViewData["Title"] = "Delete Question";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-danger mb-4">Confirm Deletion</h1>

            <div class="alert alert-danger shadow-sm p-4" role="alert">
                <h3>Are you sure you want to delete the question: **@Model.Title**?</h3>
                <p class="lead mt-3">This action cannot be undone. The question and all its answers will be permanently removed from the system.</p>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Question Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Content</dt>
                        <dd class="col-sm-9">@Model.Content</dd>

                        <dt class="col-sm-3">Question ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">User ID</dt>
                        <dd class="col-sm-9">@Model.UserId</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsResolved ? "bg-success" : "bg-warning text-dark")">
                                @(Model.IsResolved ? "Resolved" : "Unresolved")
                            </span>
                        </dd>

                        @if (Model.CourseId.HasValue)
                        {
                            <dt class="col-sm-3">Course ID</dt>
                            <dd class="col-sm-9">@Model.CourseId</dd>
                        }

                        @if (Model.LessonId.HasValue)
                        {
                            <dt class="col-sm-3">Lesson ID</dt>
                            <dd class="col-sm-9">@Model.LessonId</dd>
                        }

                        @if (Model.ExamId.HasValue)
                        {
                            <dt class="col-sm-3">Exam ID</dt>
                            <dd class="col-sm-9">@Model.ExamId</dd>
                        }
                    </dl>
                </div>
            </div>

            <hr class="mt-4" />

            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 me-3">
                    <i class="bi bi-trash"></i> Delete Permanently
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel & Back to List</a>
            </form>
        </div>
    </div>
</div>