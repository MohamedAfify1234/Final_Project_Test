@model EditCourseViewModel

@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course: @Model.Title</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-lg-9">
        <form asp-action="Edit" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />

            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Basic Course Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Title" class="form-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ShortDescription" class="form-label"></label>
                                <input asp-for="ShortDescription" class="form-control" />
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Media, Status & Metrics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ThumbnailUrl" class="form-label"></label>
                                <input asp-for="ThumbnailUrl" class="form-control" />
                                <span asp-validation-for="ThumbnailUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PreviewVideoUrl" class="form-label"></label>
                                <input asp-for="PreviewVideoUrl" class="form-control" />
                                <span asp-validation-for="PreviewVideoUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="TotalDuration" class="form-label">Duration (Hours)</label> @* Simplified label text *@
                                <input asp-for="TotalDuration" class="form-control" />
                                <span asp-validation-for="TotalDuration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="TotalLessons" class="form-label">Total Lessons</label> @* Simplified label text *@
                                <input asp-for="TotalLessons" class="form-control" />
                                <span asp-validation-for="TotalLessons" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-group form-check mb-3">
                                <input class="form-check-input" asp-for="IsFree" />
                                <label class="form-check-label" asp-for="IsFree">
                                    @Html.DisplayNameFor(model => model.IsFree)
                                </label>
                            </div>
                            <div class="form-group form-check mb-3 ms-4">
                                @* Added ms-4 for horizontal separation *@
                                <input class="form-check-input" asp-for="IsPublished" />
                                <label class="form-check-label" asp-for="IsPublished">
                                    @Html.DisplayNameFor(model => model.IsPublished)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           @*  <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Categorization</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CategoryId" class="form-label">Category</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="SubCategoryId" class="form-label">SubCategory</label>
                                <select asp-for="SubCategoryId" class="form-control" asp-items="ViewBag.SubCategoryId"></select>
                                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div> *@
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">System Metadata (Read Only)</h5>
                </div>
                <div class="card-body">
                    
                    <div class="row mt-2">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="CreatedDate" class="form-label"></label>
                                <input asp-for="CreatedDate" class="form-control-plaintext" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="UpdatedDate" class="form-label"></label>
                                <input asp-for="UpdatedDate" class="form-control-plaintext" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="PublishedDate" class="form-label"></label>
                                <input asp-for="PublishedDate" class="form-control-plaintext" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group pt-3 text-center">
                <input type="submit" value="Save Changes" class="btn btn-success btn-lg px-5" />
            </div>

        </form>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}