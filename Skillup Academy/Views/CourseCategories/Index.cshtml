@model IEnumerable<CourseCategory>

@{
    ViewData["Title"] = "Course Categories";
}

<h1 class="mb-4">Course Categories Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Category</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    @* Card Icon *@
                    <div class="card-header bg-light text-center py-4">
                        <i class="@item.Icon fs-1 text-primary"></i>
                    </div>

                    <div class="card-body d-flex flex-column">

                        @* Title & Status Badges *@
                        <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Description)</h6>

                        <div class="mb-3">
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-warning text-dark") me-2">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                            <span class="badge bg-info">
                                @item.SubCategories?.Count Sub Categories
                            </span>
                        </div>

                        @* Metrics *@
                        <div class="row row-cols-1 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-collection me-1"></i> @item.Courses?.Count Courses
                            </div>
                            <div class="col">
                                <i class="bi bi-tags me-1"></i> @item.SubCategories?.Count Sub Categories
                            </div>
                            <div class="col">
                                <i class="bi @item.Icon me-1"></i> @Html.DisplayFor(modelItem => item.Icon)
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            <a asp-action="Index" asp-Controller="SubCategories" asp-route-categoryId="@item.Id" class="btn btn-outline-info btn-sm">Sub Categories</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Category ID: @Html.DisplayFor(modelItem => item.Id)
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No categories found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
    @* Add a reference to Bootstrap Icons if you're using them, or remove the <i> tags if not. *@
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"> *@
}