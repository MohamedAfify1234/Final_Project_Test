@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instructor Registration - Bedaya</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3498db;
            --primary-dark: #2c3e50;
            --primary-light: #ede9fe;
            --secondary-color: #6b7280;
            --light-color: #f9fafb;
            --dark-color: #1f2937;
            --border-color: #e5e7eb;
            --error-color: #ef4444;
            --success-color: #10b981;
            --accent-color: #f59e0b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #2c3e50 0%, #3b82f6 100%);
            color: var(--dark-color);
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .register-container {
            width: 100%;
            max-width: 800px;
            animation: fadeIn 0.8s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .register-card {
            background: white;
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
        }

            .register-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            }

        .register-header {
            text-align: center;
            margin-bottom: 2rem;
            position: relative;
        }

        .home-link {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: color 0.3s;
        }

            .home-link:hover {
                color: var(--primary-dark);
            }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.3rem;
            box-shadow: 0 4px 8px rgba(109, 40, 217, 0.3);
        }

        .logo-text {
            font-size: 1.6rem;
            font-weight: 700;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .register-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--dark-color);
        }

        .register-subtitle {
            color: var(--secondary-color);
            font-size: 0.95rem;
        }

        /* Profile Picture Section - Now at the top */
        .profile-picture-section {
            text-align: center;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: linear-gradient(135deg, var(--primary-light) 0%, #f0f9ff 100%);
            border-radius: 20px;
            border: 2px dashed var(--primary-color);
            position: relative;
        }

        .profile-preview-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .oval-preview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: linear-gradient(135deg, #e0f2fe 0%, #f0f9ff 100%);
            border: 3px solid var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
            box-shadow: 0 8px 25px rgba(52, 152, 219, 0.3);
            transition: all 0.3s ease;
        }

            .oval-preview:hover {
                transform: scale(1.05);
                box-shadow: 0 12px 35px rgba(52, 152, 219, 0.4);
            }

        .preview-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .default-avatar {
            font-size: 3rem;
            color: var(--primary-color);
            opacity: 0.7;
        }

        .upload-instructions {
            text-align: center;
            margin-bottom: 1rem;
        }

            .upload-instructions h3 {
                color: var(--primary-dark);
                margin-bottom: 0.5rem;
                font-size: 1.2rem;
            }

            .upload-instructions p {
                color: var(--secondary-color);
                font-size: 0.9rem;
                margin-bottom: 1rem;
            }

        .file-upload-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .file-upload-btn {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        }

            .file-upload-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
            }

        .file-name {
            font-size: 0.9rem;
            color: var(--secondary-color);
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .file-upload-input {
            display: none;
        }

        .remove-image {
            background: var(--error-color);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: background 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .remove-image:hover {
                background: #dc2626;
                transform: translateY(-1px);
            }

        .register-form {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            position: relative;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

        .form-label {
            font-weight: 500;
            color: var(--dark-color);
            font-size: 0.9rem;
        }

            .form-label.required::after {
                content: " *";
                color: var(--error-color);
            }

        .form-input {
            padding: 0.9rem 1rem;
            border: 1.5px solid var(--border-color);
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            background: var(--light-color);
        }

            .form-input:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
                background: white;
            }

        .form-textarea {
            min-height: 100px;
            resize: vertical;
            font-family: inherit;
        }

        .input-with-icon {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--secondary-color);
        }

        .input-with-icon .form-input {
            padding-left: 2.5rem;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--secondary-color);
            cursor: pointer;
            transition: color 0.2s;
        }

            .password-toggle:hover {
                color: var(--primary-color);
            }

        .form-options {
            grid-column: 1 / -1;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.875rem;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .remember-me input[type="checkbox"] {
                width: 16px;
                height: 16px;
                accent-color: var(--primary-color);
            }

        .login-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }

            .login-link:hover {
                color: var(--primary-dark);
                text-decoration: underline;
            }

        .register-button {
            grid-column: 1 / -1;
            padding: 0.9rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        }

            .register-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
            }

            .register-button:active {
                transform: translateY(0);
            }

        .field-validation-error {
            color: var(--error-color);
            font-size: 0.8rem;
            margin-top: 0.25rem;
            display: block;
        }

        .validation-summary-errors {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid var(--error-color);
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: var(--error-color);
            font-size: 0.9rem;
            grid-column: 1 / -1;
        }

            .validation-summary-errors ul {
                list-style: none;
                padding-left: 0;
            }

            .validation-summary-errors li {
                margin-bottom: 0.25rem;
            }

        .password-strength {
            margin-top: 0.25rem;
            font-size: 0.8rem;
        }

        .password-weak {
            color: var(--error-color);
        }

        .password-medium {
            color: #f59e0b;
        }

        .password-strong {
            color: var(--success-color);
        }

        /* Animation for image preview */
        @@keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.8);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .fade-in {
            animation: fadeInScale 0.5s ease;
        }

        /* Responsive Styles */
        @@media (max-width: 768px) {
            .register-form {
                grid-template-columns: 1fr;
            }

            .form-group.full-width {
                grid-column: 1;
            }

            .register-button {
                grid-column: 1;
            }

            .home-link {
                position: relative;
                justify-content: center;
                margin-bottom: 1rem;
            }

            .oval-preview {
                width: 120px;
                height: 120px;
            }
        }

        @@media (max-width: 480px) {
            .register-card {
                padding: 2rem 1.5rem;
            }

            .form-options {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }

            .home-link {
                position: relative;
                top: auto;
                transform: none;
                margin-bottom: 1rem;
            }

            .oval-preview {
                width: 100px;
                height: 100px;
            }

            .default-avatar {
                font-size: 2.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                
                <a href="/Home/Index" class="home-link btn btn-success">
                    <i class="fas fa-arrow-left"></i>
                    Back to Home
                </a>
                <div class="logo">
                    <div class="logo-icon">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <div class="logo-text">Bedaya</div>
                </div>
                <h1 class="register-title">Become an Instructor</h1>
                <p class="register-subtitle">Join our community of expert educators</p>
            </div>

            <!-- Profile Picture Section - Now at the top -->
            <div class="profile-picture-section">
                <div class="profile-preview-container">
                    <div class="oval-preview" id="ovalPreview">
                        <i class="fas fa-camera default-avatar" id="defaultAvatar"></i>
                        <img src="" alt="Profile Preview" class="preview-image" id="previewImage" style="display: none;">
                    </div>
                </div>

                <div class="upload-instructions">
                    <h3>Add Your Profile Picture</h3>
                    <p>Choose a professional photo that represents you well</p>
                </div>

                <div class="file-upload-wrapper">
                    <input type="file" id="ClientFile" name="ClientFile" class="file-upload-input" accept="image/*">
                    <button type="button" class="file-upload-btn" id="uploadTrigger">
                        <i class="fas fa-cloud-upload-alt"></i>
                        Choose Profile Picture
                    </button>
                    <div class="file-name" id="fileName">No file chosen</div>
                    <button type="button" class="remove-image" id="removeImage" style="display: none;">
                        <i class="fas fa-times"></i>
                        Remove Photo
                    </button>
                </div>
                <span class="field-validation-error" data-valmsg-for="ClientFile" data-valmsg-replace="true"></span>
            </div>

            @* <form class="register-form" method="post" action="/Account/InstructorRegister" enctype="multipart/form-data"> *@
            <form class="register-form" asp-action="InstructorRegister" asp-controller="Account" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Personal Information -->
                <div class="form-group">
                    <label for="FirstName" class="form-label required">First Name</label>
                    <div class="input-with-icon">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" id="FirstName" name="FirstName" class="form-input" placeholder="Enter your first name" required>
                    </div>
                    <span class="field-validation-error" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label for="LastName" class="form-label required">Last Name</label>
                    <div class="input-with-icon">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" id="LastName" name="LastName" class="form-input" placeholder="Enter your last name" required>
                    </div>
                    <span class="field-validation-error" data-valmsg-for="LastName" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label for="Email" class="form-label required">Email Address</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope input-icon"></i>
                        <input type="email" id="Email" name="Email" class="form-input" placeholder="Enter your email" required>
                    </div>
                    <span class="field-validation-error" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label for="PhoneNumber" class="form-label required">Phone Number</label>
                    <div class="input-with-icon">
                        <i class="fas fa-phone input-icon"></i>
                        <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-input" placeholder="Enter your phone number" required>
                    </div>
                    <span class="field-validation-error" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                </div>

                <!-- Professional Information -->
                <div class="form-group full-width">
                    <label for="Bio" class="form-label">Bio</label>
                    <textarea id="Bio" name="Bio" class="form-input form-textarea" placeholder="Tell us about yourself and your teaching experience..."></textarea>
                    <span class="field-validation-error" data-valmsg-for="Bio" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label for="Expertise" class="form-label">Area of Expertise</label>
                    <div class="input-with-icon">
                        <i class="fas fa-star input-icon"></i>
                        <input type="text" id="Expertise" name="Expertise" class="form-input" placeholder="e.g., Web Development, Data Science">
                    </div>
                    <span class="field-validation-error" data-valmsg-for="Expertise" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label for="Qualifications" class="form-label">Qualifications</label>
                    <div class="input-with-icon">
                        <i class="fas fa-graduation-cap input-icon"></i>
                        <input type="text" id="Qualifications" name="Qualifications" class="form-input" placeholder="e.g., PhD, Certifications">
                    </div>
                    <span class="field-validation-error" data-valmsg-for="Qualifications" data-valmsg-replace="true"></span>
                </div>

                <!-- Password Section -->
                <div class="form-group">
                    <label for="Password" class="form-label required">Password</label>
                    <div class="input-with-icon">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" id="Password" name="Password" class="form-input" placeholder="Create a password" required>
                        <button type="button" class="password-toggle" id="passwordToggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <div class="password-strength" id="passwordStrength"></div>
                    <span class="field-validation-error" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label for="PasswordConfirmed" class="form-label required">Confirm Password</label>
                    <div class="input-with-icon">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" id="PasswordConfirmed" name="PasswordConfirmed" class="form-input" placeholder="Confirm your password" required>
                        <button type="button" class="password-toggle" id="confirmPasswordToggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span class="field-validation-error" data-valmsg-for="PasswordConfirmed" data-valmsg-replace="true"></span>
                </div>

                <!-- Options -->
                <div class="form-options">
                    <div class="remember-me">
                        <input type="checkbox" id="RememberMe" name="RememberMe" value="true">
                        <label for="RememberMe">Remember me</label>
                    </div>
                    <a href="/Account/Login" class="login-link">Already have an account? Sign in</a>
                </div>

                <button type="submit" class="register-button">Create Instructor Account</button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // File upload elements
            const fileInput = document.getElementById('ClientFile');
            const uploadTrigger = document.getElementById('uploadTrigger');
            const fileName = document.getElementById('fileName');
            const previewImage = document.getElementById('previewImage');
            const defaultAvatar = document.getElementById('defaultAvatar');
            const removeImageBtn = document.getElementById('removeImage');
            const ovalPreview = document.getElementById('ovalPreview');

            // Trigger file input when button is clicked
            uploadTrigger.addEventListener('click', function() {
                fileInput.click();
            });

            // Handle file selection
            fileInput.addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    // Update file name display
                    fileName.textContent = file.name;

                    // Show remove button
                    removeImageBtn.style.display = 'flex';

                    // Preview image
                    const reader = new FileReader();

                    reader.addEventListener('load', function() {
                        previewImage.src = reader.result;
                        previewImage.style.display = 'block';
                        defaultAvatar.style.display = 'none';

                        // Add animation
                        ovalPreview.classList.add('fade-in');
                        setTimeout(() => {
                            ovalPreview.classList.remove('fade-in');
                        }, 500);
                    });

                    reader.readAsDataURL(file);
                } else {
                    resetImagePreview();
                }
            });

            // Remove image functionality
            removeImageBtn.addEventListener('click', function() {
                fileInput.value = '';
                resetImagePreview();
            });

            function resetImagePreview() {
                previewImage.style.display = 'none';
                previewImage.src = '';
                defaultAvatar.style.display = 'block';
                fileName.textContent = 'No file chosen';
                removeImageBtn.style.display = 'none';
            }

            // Password toggle functionality
            const passwordToggle = document.getElementById('passwordToggle');
            const passwordInput = document.getElementById('Password');
            const confirmPasswordToggle = document.getElementById('confirmPasswordToggle');
            const confirmPasswordInput = document.getElementById('PasswordConfirmed');
            const passwordStrength = document.getElementById('passwordStrength');

            passwordToggle.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
            });

            confirmPasswordToggle.addEventListener('click', function() {
                const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                confirmPasswordInput.setAttribute('type', type);
                this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
            });

            // Password strength indicator
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                let strength = 'Weak';
                let strengthClass = 'password-weak';

                if (password.length >= 8) {
                    const hasUpperCase = /[A-Z]/.test(password);
                    const hasLowerCase = /[a-z]/.test(password);
                    const hasNumbers = /\d/.test(password);
                    const hasSpecialChar = /[!#$%^&*(),.?":{}|<>]/.test(password);

                    const requirementsMet = [hasUpperCase, hasLowerCase, hasNumbers, hasSpecialChar].filter(Boolean).length;

                    if (requirementsMet >= 3 && password.length >= 12) {
                        strength = 'Strong';
                        strengthClass = 'password-strong';
                    } else if (requirementsMet >= 2) {
                        strength = 'Medium';
                        strengthClass = 'password-medium';
                    }
                }

                passwordStrength.textContent = `Password strength: ${strength}`;
                passwordStrength.className = `password-strength ${strengthClass}`;
            });

            // Form submission enhancement
            const registerForm = document.querySelector('.register-form');

            registerForm.addEventListener('submit', function(e) {
                const submitBtn = this.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;

                // Show loading state
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creating Account...';
                submitBtn.disabled = true;

                // In a real application, the form would be submitted to the server
                // This is just for visual feedback
                setTimeout(() => {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 2000);
            });

            // Add focus effects to form inputs
            const formInputs = document.querySelectorAll('.form-input');

            formInputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    this.parentElement.parentElement.classList.remove('focused');
                });
            });
        });
    </script>
</body>
</html>