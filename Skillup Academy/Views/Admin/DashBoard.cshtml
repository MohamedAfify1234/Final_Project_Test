@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard Overview";
    Layout = "_AdminLayout";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Admin Dashboard Overview</h1>
