@model IEnumerable<SubscriptionPlan>

@{
    ViewData["Title"] = "Subscription Plans Management";
}

<h1 class="mb-4">Subscription Plans Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New Plan</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    @* Card Header with Status *@
                    <div class="card-header @(item.IsActive ? "bg-success" : "bg-secondary") text-white text-center py-3">
                        <div class="d-flex align-items-center justify-content-center gap-2">
                            @if (item.IsActive)
                            {
                                <i class="bi bi-check-circle-fill"></i>
                                <span class="fw-bold">Active Plan</span>
                            }
                            else
                            {
                                <i class="bi bi-x-circle"></i>
                                <span class="fw-bold">Inactive Plan</span>
                            }
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">

                        @* User and Subscription Info *@
                        <h5 class="card-title text-primary">@item.User?.UserName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Subscription?.Name</h6>

                        @* Payment Info *@
                        <div class="mb-3">
                            <span class="badge bg-info me-2">
                                $@item.PaidAmount Paid
                            </span>
                            @if (!string.IsNullOrEmpty(item.TransactionId))
                            {
                                <span class="badge bg-dark">
                                    TXN: @item.TransactionId
                                </span>
                            }
                        </div>

                        @* Date Range *@
                        <div class="mb-3">
                            <div class="row small text-muted">
                                <div class="col-6">
                                    <strong>Start:</strong><br>
                                    @item.StartDate.ToString("dd MMM yyyy")
                                </div>
                                <div class="col-6">
                                    <strong>End:</strong><br>
                                    @item.EndDate.ToString("dd MMM yyyy")
                                </div>
                            </div>
                        </div>

                        @* Duration Progress *@
                        @{
                            var totalDays = (item.EndDate - item.StartDate).TotalDays;
                            var daysPassed = (DateTime.Now - item.StartDate).TotalDays;
                            var progressPercentage = totalDays > 0 ? (daysPassed / totalDays) * 100 : 0;
                            progressPercentage = Math.Max(0, Math.Min(100, progressPercentage));
                        }
                        <div class="mb-3">
                            <div class="d-flex justify-content-between small text-muted mb-1">
                                <span>Plan Progress</span>
                                <span>@progressPercentage.ToString("F0")%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar @(item.IsActive ? "bg-success" : "bg-secondary")"
                                     role="progressbar"
                                     style="width: @progressPercentage%;"
                                     aria-valuenow="@progressPercentage"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>

                        @* Additional Info *@
                        <div class="row row-cols-1 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-person me-1"></i> User: @item.User?.UserName
                            </div>
                            <div class="col">
                                <i class="bi bi-credit-card me-1"></i> Plan: @item.Subscription?.Name
                            </div>
                            <div class="col">
                                <i class="bi bi-journals me-1"></i> Course: @item.Course?.Title
                            </div>
                            <div class="col">
                                <i class="bi bi-receipt me-1"></i>
                                @if (!string.IsNullOrEmpty(item.TransactionId))
                                {
                                    <span>TXN: @item.TransactionId.Substring(0, Math.Min(8, item.TransactionId.Length))...</span>
                                }
                                else
                                {
                                    <span>No Transaction ID</span>
                                }
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Plan ID: @item.Id
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No subscription plans found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
    @* Add a reference to Bootstrap Icons if you're using them, or remove the <i> tags if not. *@
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"> *@
}