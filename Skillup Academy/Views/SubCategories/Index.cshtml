@model IEnumerable<SubCategory>

@{
    ViewData["Title"] = "SubCategories Management";
}

<h1 class="mb-4">SubCategories Catalog</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg mb-4 shadow-sm">Create New SubCategory</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">

                    @* Card Icon/Header *@
                    <div class="card-header bg-light text-center py-4">
                        <i class="bi bi-tags fs-1 text-primary"></i>
                    </div>

                    <div class="card-body d-flex flex-column">

                        @* Title & Status Badges *@
                        <h5 class="card-title text-primary">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Category?.Name</h6>

                        <div class="mb-3">
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary") me-2">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                            <span class="badge bg-info">
                                Sub Category
                            </span>
                        </div>

                        @* Description *@
                        <p class="card-text small text-muted mb-3">
                            @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 100)
                            {
                                @item.Description.Substring(0, 100)
                                <text>...</text>
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>

                        @* Metrics *@
                        <div class="row row-cols-1 g-2 mb-3 small text-muted">
                            <div class="col">
                                <i class="bi bi-diagram-2 me-1"></i> Parent: @item.Category?.Name
                            </div>
                            <div class="col">
                                <i class="bi bi-journals me-1"></i> Courses: @item.Courses?.Count
                            </div>
                            <div class="col">
                                <i class="bi bi-tag me-1"></i> @item.Name
                            </div>
                        </div>

                        @* Actions (Pushed to the bottom) *@
                        <div class="mt-auto pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:black" class="btn btn-secondary btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        SubCategory ID: @item.Id
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No subcategories found. Start by creating a new one!
            </div>
        </div>
    }
</div>

@section Scripts {
    @* Add a reference to Bootstrap Icons if you're using them, or remove the <i> tags if not. *@
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"> *@
}