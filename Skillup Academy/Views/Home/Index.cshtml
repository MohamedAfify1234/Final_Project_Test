@{
    ViewData["Title"] = "Home Page";
}
<section class="hero">
    <div class="hero-content">
        <h2>Join Hundreds of Thousands of Creators Now</h2>
        <p>Hundreds of training courses "and more" with a single subscription that opens the doors to the future for you. Start your educational journey today.</p>
        <div class="hero-buttons">
            <button class="hero-btn btn-primary">Subscribe Now</button>
            <button class="hero-btn btn-secondary">Browse Courses</button>
        </div>
        <form asp-action="SearchResults" asp-controller="Home" method="get">
			<div class="search-bar d-flex justify-content-center mt-4">
                <input type="text" name="query"
					   class="form-control shadow-sm"
					   placeholder="Search for a course, topic, or instructor..."
					   style="max-width: 400px; border-top-left-radius: 30px; border-bottom-left-radius: 30px; padding: 12px 18px; border: 1px solid #ced4da;">
				<button type="submit" class="btn btn-primary fw-semibold"
						style="border-top-right-radius: 30px; border-bottom-right-radius: 30px; padding: 12px 25px;">
					<i class="fas fa-search me-1"></i> Search
				</button>
			</div>
        </form>
        

    </div>
</section>

